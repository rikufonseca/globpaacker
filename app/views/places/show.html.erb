<div class="wrapperall">
  <div class="backbut">
     <%= link_to navigation_path(@navigation) do %>
          <span class="back"><strong> < Back </strong></span>
      <% end %>
  </div>
  <div class="container-fluid show-place">
    <div class="title-card">
      <h1 class="text-center"><%= @place.name %></h1>
    </div>
  </div>

      <div class="photo">
        <%= cl_image_tag(@place.photo.key,:class => "imageplace") %>
      </div>
    <div class="container-fluid show-place-bottom">
      <ul>
        <li><strong>Duration: </strong><%= @place.duration %> minutes | <%= @place.exterior? ? "Exterior" : "Interior" %>
        </li>
         <li><strong>Senses: </strong> <%= @place.senses.gsub('"', '').gsub('[', '').gsub(']', '') %>
         </li>
         <li>
         <strong> Interests: </strong> <%= @place.interest.gsub('"', '').gsub('[', '').gsub(']', '') %>
         </li>
         <li>
         <strong>Environment: </strong> <%= @place.environment.gsub('"', '').gsub('[', '').gsub(']', '') %>
         </li>
         <li>
         <strong>Rating: </strong> <%= @place.rating %> /5
         </li>
         <li>
         <strong>To know everything: </strong> <%= @place.description %>
         </li>
      </ul>

      <% if @step %>
        <div class="btn btn-secondary trans" id="opbut">
          <%= link_to "I AM HERE", visit_step_path(@step), method: :patch %>
        </div>
      <% else %>
        <div class="btn btn-secondary trans" id="opbut">
          <%= link_to "ADD TO MY ITINERARY", navigation_place_steps_path(@navigation, @place), method: :post %>
        </div>
      <% end %>
    </div>
  </div>
</div>
