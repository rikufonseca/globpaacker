<div class="container d-grid gap-1 col-12">
<div class="container-fluid" style="padding-top: 20px;">
  <div id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  <mapbox-gl interactive access-token="MAPBOX_API_KEY">

  <mapbox-gl-control interactive position="top-right">

    <style>
      #icontrol {
        color: #fff;
        text-align: center;
        background-color: rgba(10,10,10,0.5);
      }
    </style>
    <div id="icontrol">
      <div>I am a custom Control.</div>
      <button>Click me!</button>
    </div>

  </mapbox-gl-control>
</mapbox-gl>

  </div>
</div>

  <div class="mb-3">
    <%= simple_form_for(@navigation) do |f| %>
    <%= f.input :time_deadline, as: :datetime, html5: true, :label => "ARRIVAL DATE AND TIME" %>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">WHAT IS THE WEATHER TODAY ?</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Shady">
  </div>
  <div>
    <label for="exampleFormControlInput1" class="form-label">FINAL DESTINATION</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your destination">
  </div>
  <span style="display:block; height: 20px;"></span>
  <%= f.submit %>
   <%# <%= link_to 'Navigation tool', navigation_path(@navigation) %>
    <% end %>
</div>
