  <%= simple_form_for(navigation) do |f| %>
<div class="mt-3">
  <%= f.input :ending_address, placeholder: "Address of your final destination", :label => "DESTINATION" %>
  <%= f.input :weather, collection: Navigation::WEATHER, :label => "TODAY'S WEATHER"%>
   <%= f.input :time_deadline, as: :datetime, html5: true, :label => "ARRIVAL DATE AND TIME" %>
</div>
<span style="display:block; height: 0.2em;"></span>
<div class="btn btn-secondary trans navbut">
  <%= f.submit class: "btn btn-default nav" %>
</div>
  <% end %>
